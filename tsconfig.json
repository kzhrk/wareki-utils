{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.spec.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "jsx": "preserve",
    "esModuleInterop": true,
    "declaration": true
  }
}
